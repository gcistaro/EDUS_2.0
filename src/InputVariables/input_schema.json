{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "tb_file": {
            "type": "string",
            "default": "",
            "title": "name of the file _tb.dat"
        },
        "fermienergy": {
            "type": "number",
            "default": 0.0,
            "title": "Fermi energy of the system"
        },
        "fermienergy_units": {
            "type": "string",
            "default": "eV",
            "enum": [
                "eV",
                "auenergy"
            ],
            "title": "Units used for the Fermi energy of the system"
        },
        "coulomb": {
            "type": "boolean",
            "default": false,
            "title": "If true, we go beyond IPA using HSEX theory"
        },
        "epsilon": {
            "type": "number",
            "default": 1.0,
            "title": "Dielectric constant for RK potential"
        },
        "r0": {
            "type": "number",
            "default": 10.0,
            "title": "r0 screening length for RK potential"
        },
        "grid": {
            "type": "array",
            "items": {
                "type": "integer"
            },
            "minItems": 3,
            "maxItems": 3,
            "default": [
                10,
                10,
                1
            ],
            "title": "Dimension of the k grid (R as well) used for the simulation"
        },
        "filledbands": {
            "type": "integer",
            "default": 0,
            "title": "Number of filled bands for the simulation (ideally will be either this of fermienergy"
        },
        "dt": {
            "type": "number",
            "default": 0.01,
            "title": "Time resolution used for propagating Density Matrix"
        },
        "gradient_space": {
            "type": "string",
            "default": "R",
            "title": "Space where the gradient with respect to k is evaluated"
        },
        "dt_units": {
            "type": "string",
            "default": "autime",
            "enum": [
                "autime",
                "fs"
            ],
            "title": "Units for the Time resolution used for propagating Density Matrix"
        },
        "printresolution": {
            "type": "integer",
            "default": 1,
            "title": "Time steps needed to print in hdf5 and observables"
        },
        "printresolution_pulse": {
            "type": "integer",
            "default": 0,
            "title": "Time steps needed to print in hdf5 and observables during the pulse"
        },
        "initialtime": {
            "type": "number",
            "default": 0.0,
            "title": "Initial time of the simulation"
        },
        "initialtime_units": {
            "type": "string",
            "default": "autime",
            "enum": [
                "autime",
                "fs"
            ],
            "title": "Units for the Time resolution used for Initial time of the simulation"
        },
        "finaltime": {
            "type": "number",
            "default": 0.0,
            "title": "Final time of the simulation"
        },
        "finaltime_units": {
            "type": "string",
            "default": "autime",
            "enum": [
                "autime",
                "fs"
            ],
            "title": "Units for the Time resolution used for Final time of the simulation"
        },
        "solver": {
            "type": "string",
            "default": "RK",
            "enum": [
                "RK",
                "AB"
            ],
            "title": "Solver used for time propagation of the Density Matrix"
        },
        "order": {
            "type": "integer",
            "default": 4,
            "title": "Order of the Solver used for time propagation of the Density Matrix"
        },
        "damping": {
            "type": "number",
            "default": 0.0,
            "title": "Damping in the density matrix equation of motion due to lifetime of a state in an open system."
        },
        "damping_units":{
            "type": "string",
            "default": "autime",
            "enum":[
                "autime",
                "ns",
                "meV"
            ],
            "title": "Units for the damping coefficient in the density matrix equation of motion."
        },
        "toprint": {
            "type":  "array",
            "title": "Big quantities that we want to print",
            "minItems": 1,
            "maxItems": 10,
            "default": {
                "DMk_wannier" : "false",
                "DMk_bloch"   : "false",
                "fullH"       : "false",
                "SelfEnergy"  : "false"
            },
            "items" : {
                "DMk_wannier" : {
                    "type"    : "string",
                    "default" : "false",
                    "title"   : "true if you want to print DM in k, wannier gauge"
                },
                "DMk_bloch"   : {
                    "type"    : "string",
                    "default" : "false",
                    "title"   : "true if you want to print DM in k, bloch gauge"
                },
                "fullH"       : {
                    "type"    : "string",
                    "default" : "false",
                    "title"   : "true if you want to print H=H0+Er in k, wannier gauge"
                },
                "SelfEnergy"  : {
                    "type"    : "string",
                    "default" : "false",
                    "title"   : "true if you want to print the self energy in k, wannier gauge"
                }
            }
        },
        "kpath": {
            "type":  "array",
            "title": "vertex of a path in k space where we want to print the band structure",
            "minItems": 0,
            "maxItems": 100,
            "default": []
        },
        "lasers": {
            "type": "array",
            "title": "description of all the lasers",
            "minItems": 1,
            "maxItems": 10,
            "default" : {
                "type": "object",
                "title": "laser",
                "properties": 
                {
                    "intensity": {
                        "type": "number",
                        "default": 0.0,
                        "title": "Intensity of the laser"
                    },
                    "intensity_units": {
                        "type": "string",
                        "default": "Wcm2",
                        "enum": [
                            "Wcm2",
                            "au"
                        ],
                        "title": "Units for intensity of the laser"
                    },
                    "frequency": {
                        "type": "number",
                        "default": 0.0,
                        "title": "Frequency of the laser"
                    },
                    "frequency_units": {
                        "type": "string",
                        "default": "eV",
                        "enum": [
                            "eV",
                            "auenergy"
                        ],
                        "title": "Units for frequency of the laser"
                    },
                    "wavelength": {
                        "type": "number",
                        "default": 0.0,
                        "title": "Wavelength of the laser"
                    },
                    "wavelength_units": {
                        "type": "string",
                        "default": "nm",
                        "enum": [
                            "nm",
                            "au"
                        ],
                        "title": "Units for wavelength of the laser"
                    },
                    "polarization": {
                        "type": "array",
                        "items": {
                            "type": "number",
                            "default": 0.0
                        },
                        "title": "Polarization of the laser in cartesian coordinates"
                    },
                    "t0": {
                        "type": "number",
                        "default": 0.0,
                        "title": "initial time of the laser"
                    },
                    "t0_units": {
                        "type": "string",
                        "default": "fs",
                        "enum": [
                            "fs",
                            "au"
                        ],
                        "title": "Units for initial time of the laser"
                    },
                    "cycles": {
                        "type": "number",
                        "default": 0.0,
                        "title": "Number of cycles the sin2 laser last."
                    },
                    "phase": {
                        "type": "number",
                        "default": 0.0,
                        "title": "Phase of the laser"
                    },
                    "envelope": {
                        "type": "string",
                        "default": "Sin2",
                        "enum":["None",
                            "Sin2"],
                        "title": "Envelope of laser pulse."
                    }
                }
            }, 
            "items" : {
                "type": "object",
                "title": "laser",
                "properties": 
                {
                    "intensity": {
                        "type": "number",
                        "default": 0.0,
                        "title": "Intensity of the laser"
                    },
                    "intensity_units": {
                        "type": "string",
                        "default": "Wcm2",
                        "enum": [
                            "Wcm2",
                            "au"
                        ],
                        "title": "Units for intensity of the laser"
                    },
                    "frequency": {
                        "type": "number",
                        "default": 0.0,
                        "title": "Frequency of the laser"
                    },
                    "frequency_units": {
                        "type": "string",
                        "default": "eV",
                        "enum": [
                            "eV",
                            "auenergy"
                        ],
                        "title": "Units for frequency of the laser"
                    },
                    "wavelength": {
                        "type": "number",
                        "default": 0.0,
                        "title": "Wavelength of the laser"
                    },
                    "wavelength_units": {
                        "type": "string",
                        "default": "nm",
                        "enum": [
                            "nm",
                            "au"
                        ],
                        "title": "Units for wavelength of the laser"
                    },
                    "polarization": {
                        "type": "array",
                        "items": {
                            "type": "number",
                            "default": 0.0
                        },
                        "title": "Polarization of the laser in cartesian coordinates"
                    },
                    "t0": {
                        "type": "number",
                        "default": 0.0,
                        "title": "initial time of the laser"
                    },
                    "t0_units": {
                        "type": "string",
                        "default": "fs",
                        "enum": [
                            "fs",
                            "au"
                        ],
                        "title": "Units for initial time of the laser"
                    },
                    "cycles": {
                        "type": "number",
                        "default": 0.0,
                        "title": "Number of cycles the sin2 laser last."
                    },
                    "phase": {
                        "type": "number",
                        "default": 0.0,
                        "title": "Phase of the laser"
                    }
                }
            }
        }
    }
}
